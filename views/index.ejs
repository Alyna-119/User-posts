<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All posts</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>User Posts</h1>
    <div class="feed">
        <% for (post of posts) { %>
            <div class="post">
                <div class="post-header">
                    <div class="avatar"></div>
                    <div class="user">
                        <span class="user">@<%= post.username %> </span>
                        <span class="handle">id: <%= post.id %> </span>
                    </div>
                </div>
                <div class="content"><%= post.content %> </div>

                <div class="actions">
                    <a class="btn btn-outline" href="http://localhost:8080/posts/<%= post.id%>">see details</a>
                    <a class="btn btn-primary" href="http://localhost:8080/posts/<%= post.id%>/edit">edits</a>
                    <form method="post" action="/posts/<%=post.id%>?_method=DELETE">
                       <button class="btn btn-danger" type="submit">Delete Post</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>

   <a  class="btn btn-primary new-post" href="http://localhost:8080/posts/new"> Create new post</a>
</body>
</html>